<div class="row">
  <div class="span6">
    <ul class="nav nav-tabs">
      <li <%= set_active("current") %>>
        <%= link_to "Current Reservations", reservations_show_current_path %>
      </li>
      <li <%= set_active("past") %>>
        <%= link_to "Past Reservations", reservations_show_past_path %>
      </li>
      <li><%= link_to "Waitlist", "#" %></li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown">
          Other
          <b class='caret'></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Confirmed", "#" %></li>
          <li><%= link_to "Unconfirmed", "#" %></li>
        </ul>
      </li>
  </div>
  <div class="span3 pull-right">
    <div class="input-append">
      <%= text_field_tag :date, @today, :placeholder => 'YYYY-MM-DD', :class => 'span2', :id => 'reserv_show_date_pick' %>
      <span class="add-on">
        <i class="icon-calendar"></i>
      </span>
    </div>
  </div>
</div>
