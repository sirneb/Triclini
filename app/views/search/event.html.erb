<%= render 'tabs_layout' %>

<div class='well'>
<%= form_tag "/search" do %>
<div class="row">
  <div class="span3">
    <%= label_tag "Date" %>
    <div class="input-append">
      <%= text_field_tag :date, nil, :class => "span2" %>
      <span class="add-on">
        <i class="icon-calendar"></i>
      </span>
    </div>
  </div>
</div>

<div class="row">
  <div class="span3">
    <%= label_tag "Event Name:" %>
    <%= text_field_tag :event, nil, :class => "span3" %>
  </div>
  <div class="span3">
    <%= label_tag "Dining Location" %>
    <%= select_tag :hall, "<option></option><option>Chapter Hall</option><option>Garden Palace</option>".html_safe, :class => "span3" %>

  </div>
</div>
<div class="row">
  <div class="span5">
    <%= label_tag "Description:" %>
    <%= text_field_tag :event, nil, :class => "span5" %>
  </div>
</div>
<br />
<div>
<%= submit_tag "Search", :class => "btn btn_large" %>
</div>
<% end %>
</div>
